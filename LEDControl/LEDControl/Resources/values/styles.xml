<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/firstpage</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <style name="DividerColor" parent="AppTheme">
    <item name="colorControlNormal">@color/DividerColor</item>
    <item name="android:textColorPrimary">@color/numberColor</item>
    <item name="android:textSize">100px</item>
  </style>
  <style name="BackgroundForDialog">
    <item name="android:background">#77bcaf</item>
  </style>

  <style name="ConnectTitle">
    <item name="android:text">@string/connectTitle</item>
    <item name="android:textColor">@color/textColorForConnection</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textSize">25sp</item>
    <item name="android:layout_marginTop">50dp</item>
  </style>

  <style name="SpinnerStyle">
    <item name="android:textColor">@color/textColorForSpinner</item>
    <item name="android:layout_marginTop">40dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:spinnerMode">dropdown</item>
    <item name="android:dropDownVerticalOffset">40dp</item>
    <item name="android:dropDownHorizontalOffset">-20dp</item>
    <item name="android:popupBackground">@color/backgroundColorForSpinner</item>
    <item name="android:textAlignment">center</item>
    <item name="android:backgroundTint">@color/backgroundTintForSpinner</item>
  </style>

  <style name="ConnectButtonStyle">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginTop">70dp</item>
    <item name="android:text">@string/connect</item>
    <item name="android:textColor">@color/textColorForConnection</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="SetupLedStyle">
    <item name="android:text">@string/setupTitle</item>
    <item name="android:textColor">@color/textColorForConnection</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textSize">27sp</item>
    <item name="android:layout_marginTop">30dp</item>
  </style>

  <style name="NumberPickerStyle">
    <item name="android:layout_gravity">center</item>
    <item name="android:textColor">@color/textColorForConnection</item>
  </style>

  <style name="NextButtonStyle">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:text">@string/next</item>
    <item name="android:textColor">@color/textColorForConnection</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="ChooseDropDownStyle">
    <item name="android:text">@string/choose</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:textSize">80px</item>
    <item name="android:padding">20dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="ImageLayoutStyle">
    <item name="android:contentDescription"></item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="RecyclerViewStyle">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginHorizontal">20dp</item>
    <item name="android:layout_marginTop">70dp</item>
  </style>

  <style name="LinearLayoutStyle">
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginTop">25sp</item>
  </style>

  <style name="SeekBarStyle">
    <item name="android:layout_gravity">center</item>
    <item name="android:progressTint">@color/textcolor</item>
    <item name="android:progressBackgroundTint">@color/progressBackground</item>
    <item name="android:colorControlActivated">@color/textcolor</item>
    <item name="android:thumbTint">@color/textcolor</item>
  </style>

  <style name="GridLayoutStyle">
    <item name="android:layout_gravity">center</item>
    <item name="android:columnCount">3</item>
    <item name="android:rowCount">3</item>
    <item name="android:layout_marginTop">50dp</item>
  </style>

  <style name="ModeButtonStyle">
    <item name="android:textColor">@color/textColorForControlButton</item>
    <item name="android:textSize">17sp</item>
    <item name="android:layout_margin">2dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:background">@drawable/controlbutton</item>
  </style>

</resources>
