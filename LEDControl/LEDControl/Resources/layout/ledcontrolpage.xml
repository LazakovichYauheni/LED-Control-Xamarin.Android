<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorForConnection">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        style="@style/RecyclerViewStyle"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LinearLayoutStyle">
        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@drawable/brightness"/>
        <SeekBar
            android:id="@+id/seekbar"
            style="@style/SeekBarStyle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/GridLayoutStyle">
        <Button
            android:id="@+id/mode1"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 1     "
            style="@style/ModeButtonStyle"/>
        <Button
            android:id="@+id/mode2"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 2     "
            style="@style/ModeButtonStyle"/>
        <Button
            android:id="@+id/mode3"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 3     "
            style="@style/ModeButtonStyle"/>
        <Button
            android:id="@+id/mode4"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 4     "
            style="@style/ModeButtonStyle"/>
        <Button
            android:id="@+id/mode5"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 5     "
           style="@style/ModeButtonStyle"/>
        <Button
            android:id="@+id/mode6"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 6     "
            style="@style/ModeButtonStyle"/>
        <Button
            android:id="@+id/mode7"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 7     "
            style="@style/ModeButtonStyle"/>
        <Button
            android:id="@+id/mode8"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 8     "
            style="@style/ModeButtonStyle"/>
        <Button
            android:id="@+id/mode9"
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:text="     MODE 9     "
            style="@style/ModeButtonStyle"/>

    </GridLayout>

</LinearLayout>