
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorForConnection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connect"
            style="@style/ConnectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            style="@style/SpinnerStyle"/>

        <Button
            android:id="@+id/connectbuttonid"
            style="@style/ConnectButtonStyle"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:background="@drawable/connectbutton"/>

        <TextView
            android:id="@+id/setup"
            style="@style/SetupLedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <NumberPicker
            android:id="@+id/numberPicker"
            style="@style/NumberPickerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/DividerColor"/>
        <Button
            android:id="@+id/nextbutton"
            style="@style/NextButtonStyle"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:background="@drawable/connectbutton"/>
    </LinearLayout>
</RelativeLayout>